int num1 = 2;

println(num1 += 3); 
// Atribuição: num1 = (2 + 3) = 5

println(num1 *= 4); 
// Atribuição: num1 = (5 * 4) = 20

println(num1 /= 10);
// Atribuição: num1 = (20/10) = 2

println(num1 -= 2); 
// Atribuição: num1 = (2 - 2) = 0